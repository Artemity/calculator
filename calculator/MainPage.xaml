<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculator.MainPage">

    <Grid RowDefinitions="Auto, *, *, *, *, *"
          ColumnDefinitions="*, *, *, *"
          RowSpacing="5"
          ColumnSpacing="5"
          Padding="10">

        <!-- Дисплей результата -->
        <Frame Grid.Row="0" Grid.ColumnSpan="4"
               BackgroundColor="#f0f0f0"
               CornerRadius="10"
               Padding="10">
            <Label x:Name="ResultLabel"
                   Text="0"
                   FontSize="36"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center"
                   TextColor="Black"/>
        </Frame>

        <!-- Кнопки -->
        <!-- Первая строка -->
        <Button Grid.Row="1" Grid.Column="0" Text="C" Clicked="OnClearClicked" />
        <Button Grid.Row="1" Grid.Column="1" Text="±" Clicked="OnPlusMinusClicked" />
        <Button Grid.Row="1" Grid.Column="2" Text="⌫" Clicked="OnBackspaceClicked" />
        <Button Grid.Row="1" Grid.Column="3" Text="÷" Clicked="OnOperatorClicked" />

        <!-- Вторая строка -->
        <Button Grid.Row="2" Grid.Column="0" Text="7" Clicked="OnDigitClicked" />
        <Button Grid.Row="2" Grid.Column="1" Text="8" Clicked="OnDigitClicked" />
        <Button Grid.Row="2" Grid.Column="2" Text="9" Clicked="OnDigitClicked" />
        <Button Grid.Row="2" Grid.Column="3" Text="×" Clicked="OnOperatorClicked" />

        <!-- Третья строка -->
        <Button Grid.Row="3" Grid.Column="0" Text="4" Clicked="OnDigitClicked" />
        <Button Grid.Row="3" Grid.Column="1" Text="5" Clicked="OnDigitClicked" />
        <Button Grid.Row="3" Grid.Column="2" Text="6" Clicked="OnDigitClicked" />
        <Button Grid.Row="3" Grid.Column="3" Text="−" Clicked="OnOperatorClicked" />

        <!-- Четвёртая строка -->
        <Button Grid.Row="4" Grid.Column="0" Text="1" Clicked="OnDigitClicked" />
        <Button Grid.Row="4" Grid.Column="1" Text="2" Clicked="OnDigitClicked" />
        <Button Grid.Row="4" Grid.Column="2" Text="3" Clicked="OnDigitClicked" />
        <Button Grid.Row="4" Grid.Column="3" Text="+" Clicked="OnOperatorClicked" />

        <!-- Пятая строка -->
        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="0" Clicked="OnDigitClicked" />
        <Button Grid.Row="5" Grid.Column="2" Text="." Clicked="OnDecimalClicked" />
        <Button Grid.Row="5" Grid.Column="3" Text="=" Clicked="OnEqualsClicked" />
    </Grid>
</ContentPage>
